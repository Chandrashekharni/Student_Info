<div class="container">
    <table class="table text-center">
        <th>
            <tr>
                <th> Roll No</th>
                <th> Student Name</th>
                <th> Father Name</th>
                <th> Course</th>
                <th> Branch</th>
                <th> Actions</th>
            </tr>
        </th>
        <tbody>
            <% students.forEach((student) => { %>
                <tr>
                    <td> <%= student.rollNo %> </td>
                    <td> <%= student.studentName %> </td>
                    <td> <%= student.fatherName %> </td>
                    <td> <%= student.course %> </td>
                    <td> <%= student.branch %> </td>
                    <td>
                        <a href="/edit/student/page/<%= student._id %>" class="btn btn-warning"> <i class="fa-solid fa-pen-to-square"></i> Edit</a> 
                        <a href="/delete/student/<%= student._id %>" class="btn btn-danger"> <i class="fa-solid fa-trash"></i> Delete</a>
                    </td>
                    
                </tr>
                
          <%  }) %>
        </tbody>

    </table>
</div>

